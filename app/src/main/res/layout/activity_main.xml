<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light"
    tools:context=".MainActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:background="@drawable/round"
        android:layout_gravity="center"
        android:hint="Your converted Answer"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/tv"
        />

    <EditText
        android:id="@+id/edt"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/round_et"
        android:hint="Enter your number"
        android:gravity="center"
        />



    <RadioGroup
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M to CM"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="CM to M"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Celcious to Farenhite"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Farenhite to celcious"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Taka to Doller"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Doller to Taka"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Meter to Killometer"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Killometer to Meter"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Gram to Killogram"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Killogram to Gram"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Euro to Taka"
            android:textColor="@android:color/background_dark"
            />

        <RadioButton
            android:id="@+id/b12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Taka to Euro"
            android:textColor="@android:color/background_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_btn"
                android:text="Convert"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="@android:color/background_light"
                />

            <Button
                android:id="@+id/aboutBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_account_circle_black_24dp"
                android:padding="15dp"
                android:text="About"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp" />

        </LinearLayout>


    </RadioGroup>
</LinearLayout>


</ScrollView>